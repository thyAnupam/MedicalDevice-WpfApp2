<UserControl x:Class="WpfApp2.Views.AddDataToPatientUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2.Views"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        
        
        
        <Image x:Name="img" Grid.Column="0" Grid.Row="0"/>
        <StackPanel Orientation="Vertical" Margin="5" Width="150" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Button x:Name="recordButton" Content="Record" Margin="5" Click="btnRecord_Click" />
            <Button x:Name="captureButton" Content="Capture" Margin="5" />
            <ComboBox x:Name="ddlVideoDevices" HorizontalContentAlignment="Center"></ComboBox>
            
        </StackPanel>
        <Label Name="lblStatus" Grid.Row="1" Grid.Column="0" FontSize="12" FontWeight="Bold"></Label>
    </Grid>
</UserControl>

